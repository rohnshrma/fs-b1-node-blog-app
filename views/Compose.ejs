<%- include("partials/header") -%>

    <div id="compose-area" class="wrapper">
        <h2 class=" mb-3 text-center">New Blog</h2>
        <form action="/compose" method="post">
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Enter Blog Title...">
            </div>
            <div class="form-group">
                <textarea rows="5" name="content" class="form-control" placeholder="Enter Blog Content"></textarea>
            </div>
            <button type="submit" class="btn btn-block btn-danger">Add Blog </button>
        </form>
    </div>

    <%- include("partials/footer") -%>